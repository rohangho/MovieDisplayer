<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MovieListHome">

        <com.tompee.circularviewpager.CircularViewPager
            android:id="@+id/hori_slider"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:pageCount="20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Now Showing"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/hori_slider"
            app:layout_constraintStart_toStartOf="@+id/hori_slider"
            app:layout_constraintTop_toBottomOf="@id/hori_slider" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playingMovieList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/textView1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>